@{
    string activoListado = ViewBag.Title == LocalResources.Resources.tituloListado ? " active" : "";
    string activoInsertar = ViewBag.Title == LocalResources.Resources.tituloInsertar ? " active" : "";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Styles.css" rel="stylesheet" type="text/css"/>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/js/Validations.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                @Html.ActionLink(@LocalResources.Resources.textIcon, "Index", "Home", null, new { @class = "navbar-brand user-select-none" })
                <div class="collapse navbar-collapse ml-5">
                    <ul class="navbar-nav">
                        <li class="nav-item ml-3 mr-3">
                            @Html.ActionLink(@LocalResources.Resources.menuInsertar, "Index", "Insert", null, new { @class = "nav-link user-select-none " + activoInsertar })
                        </li>
                        <li class="nav-item ml-3 mr-3">
                            @Html.ActionLink(@LocalResources.Resources.menuListar, "Index", "List", null, new { @class = "nav-link user-select-none " + activoListado })
                        </li>
                        <li class="nav-item ml-3 mr-3">
                            @Html.ActionLink("Iniciar sesión", "Login", "Auth", null, new { @class = "nav-link user-select-none " + activoListado })
                        </li>
                        <li class="nav-item ml-3 mr-3">
                            @Html.ActionLink("Registarse", "Register", "Auth", null, new { @class = "nav-link user-select-none " + activoListado })
                        </li>
                        <li class="nav-item ml-3 mr-3">
                            @Html.ActionLink("Salir", "SignOut", "Auth", null, new { @class = "nav-link user-select-none " + activoListado })
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5 pt-5 mb-5 pb-5">
        @RenderBody()
    </div>
    <footer class="modal-footer bg-dark w-100 rounded-0 fixed-bottom">
        <p class="text-white">&copy;@LocalResources.Resources.copyright</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="~/Scripts/js/VueUtils.js"></script>
    <script src="~/Scripts/js/Effects.js"></script>
    <script src="~/Scripts/js/ChangeDOM.js"></script>
    <script src="~/Scripts/js/Ajax.js"></script>
</body>
</html>
